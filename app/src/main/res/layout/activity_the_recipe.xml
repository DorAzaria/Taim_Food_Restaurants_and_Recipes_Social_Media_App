<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".theRecipeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slider_view"
            android:layout_marginTop="250dp"
            android:text="שם המתכון"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/swuzone"/>

        <TextView
            android:id="@+id/ownerRecipe"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_below="@+id/recipeName"
            android:text="שם בעל המתכון"
            android:layout_marginEnd="10dp"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/foodTypeRecipe"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeName"
            android:layout_marginEnd="10dp"
            android:text="סוג אוכל"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/linearRecipeChecks"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ownerRecipe"
            android:layout_marginEnd="10dp"
            >
            <TextView
                android:id="@+id/prop5"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="ללא גלוטן     "
                android:textSize="10sp"
                android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/prop4"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="ללא גלוטן     "
                android:textSize="10sp"
                android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/prop3"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="ללא גלוטן     "
                android:textSize="10sp"
                android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/prop2"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="ללא גלוטן     "
                android:textSize="10sp"
                android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/prop1"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="ללא גלוטן     "
                android:textSize="10sp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRecipeMiniDetails"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70dp"
            android:layout_below="@+id/linearRecipeChecks"
            android:background="#E6E6E6"
            android:layout_marginEnd="10dp"
            >

            <TextView
                android:id="@+id/recipeDescription"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="20dp"
                android:text="תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקציר המנה תקצי"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/socialDetailsRecipe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/linearRecipeMiniDetails">

            <TextView
                android:id="@+id/likesRecipe"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_favorite"
                android:text="מספר לייקים"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/commentsRecipe"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/round_comment_24"
                android:text="מספר תגובות"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/viewsRecipe"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/round_visibility_24"
                android:text="מספר צפיות"
                android:textAlignment="viewEnd"
                android:textSize="15sp" />

        </LinearLayout>

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/pictureSlideRecipe"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderCircularHandlerEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true" />

        <LinearLayout
            android:id="@+id/tableIngredients"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/socialDetailsRecipe"
            android:background="@color/mainYellow">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="               מצרך                                                                     כמות"
                android:fontFamily="@font/swuzone"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ingredientLayoutRecipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tableIngredients"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/container2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/recipeDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ingredientLayoutRecipe"
            android:background="@color/mainYellow">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/swuzone"
                android:text="צעדי המתכון"
                android:textSize="18sp"
                android:textAlignment="center" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/recipeDetailsLayout"
            android:orientation="vertical"
            android:layout_marginEnd="14dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/container3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>



    </RelativeLayout>

</ScrollView>